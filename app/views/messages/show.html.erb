<% title = 'Messages Yo!!!!!!' %>


<div class="landing-page-container">
  Emergency Landing Page: <%= message_url(@message) %>
</div>

<div class="show-message">
  <br />
  <br />
  Posted by <strong><%= @message.user.name %></strong>  
  <h2>Emergency message</h2>
  <p class="big-red-box">
    <strong>URGENT:</strong><br />
    <%= @message.body %>
  </p>
  <h2>What to do</h2>
  <p class="big-red-box"><%= @message.what_to_do %></p>
  <em>sent <%= time_ago_in_words @message.created_at %> ago</em>
  <h2>Realtime Discussion</h2>
  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'yellfire'; // required: replace example with your forum shortname

      // The following are highly recommended additional parameters. Remove the slashes in front to use.
      var disqus_identifier = '<%= @message.id %>';
      var disqus_developer = '1';
      // var disqus_url = 'http://example.com/permalink-to-page.html';

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
</div>
